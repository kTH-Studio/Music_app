<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Music" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/text1</item>
        <item name="colorSecondary">@color/text2</item>
        <item name="colorSecondaryVariant">@color/text3</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">#212121</item>
    </style>

    <style name="Theme.Music.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <style name="Theme.Music.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.Music.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.Music.FullScreen" parent="Theme.AppCompat.Light.NoActionBar" />
</resources>