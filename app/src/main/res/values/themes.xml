<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Music" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">#424242</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.Music.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Music.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.Music.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.Music.FullScreen" parent="Theme.AppCompat.Light.NoActionBar" />
</resources>