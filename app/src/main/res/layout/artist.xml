<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="false">
	<com.google.android.material.appbar.AppBarLayout
		android:id="@+id/app_bar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:fitsSystemWindows="false"
		android:theme="@style/Theme.Music.AppBarOverlay">
		<com.google.android.material.appbar.SubtitleCollapsingToolbarLayout
			android:id="@+id/toolbar_layout"
			app:expandedTitleTextColor="@android:color/transparent"
			app:expandedSubtitleTextColor="@android:color/transparent"
			style="@style/Widget.MaterialComponents.Toolbar.Primary"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:fitsSystemWindows="false"
			app:contentScrim="?attr/colorPrimary"
			app:layout_scrollFlags="scroll|exitUntilCollapsed"
			app:toolbarId="@+id/toolbar">
			<ImageView
				app:layout_collapseMode="parallax"
				android:id="@+id/imageview1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:adjustViewBounds="true"
				android:fitsSystemWindows="false"
				android:layout_gravity="top"/>
			<View
				android:id="@+id/view"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@drawable/background"/>
			<include android:layout_gravity="bottom" layout="@layout/artist_toolbar" android:id="@+id/toolbar"
				android:layout_width="match_parent"
				android:layout_height="?attr/actionBarSize"/>
		</com.google.android.material.appbar.SubtitleCollapsingToolbarLayout>
	</com.google.android.material.appbar.AppBarLayout>
	<include layout="@layout/artist1"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>