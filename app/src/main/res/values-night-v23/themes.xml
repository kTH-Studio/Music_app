<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Music" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/text1</item>
        <item name="colorSecondary">@color/text2</item>
        <item name="colorSecondaryVariant">@color/text3</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.Music.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Music.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.Music.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.Music.FullScreen" parent="Theme.AppCompat.Light.NoActionBar" />
</resources>